{
    "workbench.colorTheme": "Noctis Bordo",
    "workbench.colorCustomizations":{
        "editor.selectionBackground" : "#542400f9",
        "editor.inactiveSelectionBackground" : "#b50000fb",

        "editor.selectionHighlightBackground" : "#003500f0",
        "editor.findMatchBackground" : "#322a2df0",
        "editor.findMatchHighlightBackground" : "#2c322a3c",
        "editor.wordHighlightBackground" : "#690027f0",
        "editor.wordHighlightStrongBackground" : "#690027f0",
        "editor.wordHighlightTextBackground" : "#322a2d23",
        "editor.symbolHighlightBackground" : "#520041f5",

        // "editor.findRangeHighlightBackground" : "#003500f0",
        // "editor.lineHighlightBackground" : "#1f0019f5",
        // "editor.rangeHighlightBackground" : "#003500f0",
        // "editor.hoverHighlightBackground" : "#520041f5",
        // "editor.linkedEditingBackground" : "#1f0019f5",
        // "editor.foldBackground" : "#1f0019f5",

        "editor.selectionHighlightBorder" : "#322a2df0",
        "editor.findMatchBorder" : "#fff653f0",
        "editor.findMatchHighlightBorder" : "#e76400f0",
        "editor.wordHighlightBorder" : "#2c322a3c",
        "editor.wordHighlightStrongBorder" : "#2c322a3c",
        "editor.wordHighlightTextBorder" : "#fff653f0",
        "editor.symbolHighlightBorder" : "#322a2df0",

        // "editor.findRangeHighlightBorder" : "#00e708f8",
        // "editor.lineHighlightBorder" : "#1f0019f5",
        // "editor.rangeHighlightBorder" : "#003500f0",

        "editorUnnecessaryCode.background": "#00000019",
        "editorUnnecessaryCode.border": "#b50000fb",
    },
    "[ruby]": {
        // All of these settings are scoped only to the Ruby language
        "editor.defaultFormatter": "Shopify.ruby-lsp", // Use the Ruby LSP as the default formatter
        "editor.formatOnSave": true, // Format files automatically when saving
        "editor.tabSize": 4, // Use 2 spaces for indentation
        "editor.insertSpaces": true, // Use spaces and not tabs for indentantion
        "editor.semanticHighlighting.enabled": true, // Enable semantic highlighting
        "editor.formatOnType": true // Enable formatting while typing
    },
    "Lua.diagnostics.disable": [
        "lowercase-global"
    ]
}